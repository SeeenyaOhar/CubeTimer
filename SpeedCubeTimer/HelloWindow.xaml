        <EventTrigger RoutedEvent="FrameworkElement.Loaded" >
            <BeginStoryboard Storyboard="{StaticResource CubeAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    
        
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="305*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <materialDesign:Card Grid.ColumnSpan="6" >
            <TextBlock Style="{StaticResource TitleText}" TextAlignment="Center" 
                   Text="{DynamicResource SubTitle}" 
                   VerticalAlignment="Center" />
        </materialDesign:Card>
       
        <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="6" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SimpleText}" x:Name="description" 
                   

                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    >
    <s:String x:Key="ResourceDictionaryName">Loc-en-US</s:String>
    <s:String x:Key="title">Sign Up</s:String>
    <s:String x:Key="login">Username</s:String>
    <s:String x:Key="password">Password</s:String>
